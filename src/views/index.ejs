<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .table-hover tbody tr:hover {
            background-color: #e9ecef;
        }
        .btn-custom {
            min-width: 80px;
        }
        .header {
            border-bottom: 3px solid #0d6efd;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .shadow-card {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-radius: 8px;
            background-color: #ffffff;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="shadow-card">
            <div class="d-flex justify-content-between align-items-center header">
                <h1 class="text-primary">üìö Student Management System</h1>
                <a href="/add" class="btn btn-success btn-custom">‚ûï Add Student</a>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Grade</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(student => { %>
                        <tr>
                            <td><%= student.name %></td>
                            <td><%= student.age %></td>
                            <td><%= student.grade %></td>
                            <td class="text-center">
                                <a href="/edit/<%= student._id %>" class="btn btn-warning btn-sm btn-custom me-2">‚úèÔ∏è Edit</a>
                                <form action="/delete/<%= student._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm btn-custom">üóëÔ∏è Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
